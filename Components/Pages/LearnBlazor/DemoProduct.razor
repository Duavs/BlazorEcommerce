<h3>DemoProduct</h3>
<PageTitle>Demo Product</PageTitle>
<p>Favorite Count : @FavoriteCount</p>
<div class="row">
    @foreach (var product in ProductList)
    {
        <_IndividualProduct Product="product" OnFavoriteUpdated="FavoriteCountChange">
        </_IndividualProduct>
    }
</div>

