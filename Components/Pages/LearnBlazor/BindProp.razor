@page "/learnblazor/bindprop"
<PageTitle>Bind Property</PageTitle>
<h3>Product - Data Binding</h3>

Name: @Product.Name <br/>
This Product is: @(Product.IsActive?"Active":"InActive") <br/>
Price: @Product.Price <br/>

IsActive: <input type="checkbox" @bind="@Product.IsActive"/> <br/>
Input Price: <input type="number" @bind="@Product.Price" @bind:event="oninput"/>

@code {

    Models.Product Product = new()
    {
        Id = 1,
        Name = "Sample Product",
        IsActive = true,
        Price = 5m
    };
 
}